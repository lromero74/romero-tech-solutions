#!/bin/bash

# Script to kill all frontend and backend services and restart one of each
# This script should be run from the project root directory

echo "üöÄ Service Restart Script Starting..."
echo "=============================================="

# Function to kill processes on specific ports
kill_port() {
    local port=$1
    local service_name=$2

    echo "üîç Checking for processes on port $port ($service_name)..."

    # Find and kill processes on the specified port
    pids=$(lsof -ti:$port 2>/dev/null)

    if [ ! -z "$pids" ]; then
        echo "üó°Ô∏è  Killing $service_name processes on port $port..."
        echo "$pids" | xargs kill -9 2>/dev/null
        echo "‚úÖ Killed processes: $pids"
    else
        echo "‚ÑπÔ∏è  No processes found on port $port"
    fi
}

# Function to kill processes by name pattern
kill_by_pattern() {
    local pattern=$1
    local service_name=$2

    echo "üîç Checking for $service_name processes ($pattern)..."

    # Find processes matching the pattern
    pids=$(ps aux | grep "$pattern" | grep -v grep | awk '{print $2}')

    if [ ! -z "$pids" ]; then
        echo "üó°Ô∏è  Killing $service_name processes..."
        echo "$pids" | xargs kill -9 2>/dev/null
        echo "‚úÖ Killed $service_name processes: $pids"
    else
        echo "‚ÑπÔ∏è  No $service_name processes found"
    fi
}

# Step 1: Enhanced process cleanup
echo ""
echo "üìã Step 1: Enhanced process cleanup..."
echo "=============================================="

# Use the enhanced cleanup script if available
if [ -f "./cleanup-processes.sh" ]; then
    echo "üßπ Running enhanced cleanup script..."
    ./cleanup-processes.sh
else
    echo "üìã Running basic cleanup (enhanced script not found)..."
    # Kill common frontend development ports (React, Vite, etc.)
    kill_port 5173 "Frontend (Vite default)"

    # Kill common backend development ports
    kill_port 3001 "Backend (Express default)"
    kill_port 3000 "Backend (Express default)"
    kill_port 8000 "Backend (Alternative)"

    # Kill Node.js processes that might be running npm/dev servers
    kill_by_pattern "npm run dev" "NPM Dev Servers"
    kill_by_pattern "vite" "Vite Servers"
    kill_by_pattern "webpack" "Webpack Servers"
    kill_by_pattern "nodemon" "Nodemon Servers"
fi

# Step 2: Update network configuration
echo ""
echo "üåê Step 2: Updating network configuration..."
echo "=============================================="

# Detect current network IP
CURRENT_IP=$(ipconfig getifaddr en0 2>/dev/null || ipconfig getifaddr en1 2>/dev/null)

if [ -z "$CURRENT_IP" ]; then
    echo "‚ö†Ô∏è  Warning: Could not detect network IP, using localhost only"
    CURRENT_IP="localhost"
else
    echo "üìç Detected network IP: $CURRENT_IP"
fi

# Update frontend .env.local with current IP
if [ -f ".env.local" ]; then
    echo "üìù Updating .env.local with API base URL..."
    # Use sed to replace the VITE_API_BASE_URL line
    if [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS sed
        sed -i '' "s|^VITE_API_BASE_URL=.*|VITE_API_BASE_URL=http://${CURRENT_IP}:3001/api|" .env.local
    else
        # Linux sed
        sed -i "s|^VITE_API_BASE_URL=.*|VITE_API_BASE_URL=http://${CURRENT_IP}:3001/api|" .env.local
    fi
    echo "‚úÖ Updated .env.local"
else
    echo "‚ö†Ô∏è  Warning: .env.local not found"
fi

# Update backend .env with CORS origins (clean list without accumulating IPs)
if [ -f "backend/.env" ]; then
    echo "üìù Updating backend/.env with CORS origins..."
    CORS_ORIGINS="http://localhost:5173,http://localhost:5174,http://${CURRENT_IP}:5173,https://romerotechsolutions.com,https://*.amplifyapp.com"

    if [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS sed
        sed -i '' "s|^CORS_ORIGINS=.*|CORS_ORIGINS=${CORS_ORIGINS}|" backend/.env
    else
        # Linux sed
        sed -i "s|^CORS_ORIGINS=.*|CORS_ORIGINS=${CORS_ORIGINS}|" backend/.env
    fi
    echo "‚úÖ Updated backend/.env"
    echo "üîí CORS origins: ${CORS_ORIGINS}"
else
    echo "‚ö†Ô∏è  Warning: backend/.env not found"
fi

# Update AWS RDS Security Group to allow current IP
echo ""
echo "üîê Updating AWS RDS Security Group..."
RDS_SG_ID="YOUR_RDS_SECURITY_GROUP_ID"  # e.g., sg-xxxxxxxxxxxxx
EC2_BACKEND_IP="YOUR_EC2_BACKEND_IP/32"  # e.g., 1.2.3.4/32
AWS_REGION="us-east-1"

# Get current public IP for outbound connections (for when not on local network)
PUBLIC_IP=$(curl -s -m 5 https://api.ipify.org 2>/dev/null)

if [ -z "$PUBLIC_IP" ]; then
    echo "‚ö†Ô∏è  Warning: Could not detect public IP, skipping AWS security group update"
else
    echo "üìç Detected public IP: $PUBLIC_IP"

    # Get current security group rules for port 5432
    echo "üîç Checking current RDS security group rules..."
    CURRENT_IPS=$(aws ec2 describe-security-groups \
        --group-ids "$RDS_SG_ID" \
        --region "$AWS_REGION" \
        --query 'SecurityGroups[0].IpPermissions[?ToPort==`5432`].IpRanges[].CidrIp' \
        --output text 2>/dev/null)

    if [ $? -eq 0 ]; then
        # Check if current IP is already in the list
        if echo "$CURRENT_IPS" | grep -q "${PUBLIC_IP}/32"; then
            echo "‚úÖ Current IP already allowed in RDS security group"
        else
            echo "üìù Updating RDS security group with current IP..."

            # Revoke all old IPs except EC2 backend server
            for ip in $CURRENT_IPS; do
                if [ "$ip" != "$EC2_BACKEND_IP" ]; then
                    echo "üóëÔ∏è  Removing old IP: $ip"
                    aws ec2 revoke-security-group-ingress \
                        --group-id "$RDS_SG_ID" \
                        --region "$AWS_REGION" \
                        --protocol tcp \
                        --port 5432 \
                        --cidr "$ip" 2>/dev/null
                fi
            done

            # Add current IP
            echo "‚ûï Adding current IP: ${PUBLIC_IP}/32"
            aws ec2 authorize-security-group-ingress \
                --group-id "$RDS_SG_ID" \
                --region "$AWS_REGION" \
                --protocol tcp \
                --port 5432 \
                --cidr "${PUBLIC_IP}/32" 2>/dev/null

            if [ $? -eq 0 ]; then
                echo "‚úÖ RDS security group updated successfully"
                echo "üîí Allowed IPs: $EC2_BACKEND_IP, ${PUBLIC_IP}/32"
            else
                echo "‚ö†Ô∏è  Warning: Failed to update RDS security group"
            fi
        fi
    else
        echo "‚ö†Ô∏è  Warning: Failed to query RDS security group"
    fi
fi

# Step 3: Wait for cleanup
echo ""
echo "‚è≥ Step 3: Waiting for cleanup..."
echo "=============================================="
echo "Waiting 3 seconds for processes to terminate..."
sleep 3

# Step 4: Verify ports are free
echo ""
echo "üîç Step 4: Verifying ports are free..."
echo "=============================================="
if lsof -ti:3001 >/dev/null 2>&1; then
    echo "‚ö†Ô∏è  Warning: Port 3001 still in use"
else
    echo "‚úÖ Port 3001 is free"
fi

if lsof -ti:5173 >/dev/null 2>&1; then
    echo "‚ö†Ô∏è  Warning: Port 5173 still in use"
else
    echo "‚úÖ Port 5173 is free"
fi

# Step 5: Start Backend Service
echo ""
echo "üîÑ Step 5: Starting Backend Service..."
echo "=============================================="
echo "Starting backend on port 3001..."

# Check if backend directory exists
if [ ! -d "backend" ]; then
    echo "‚ùå Error: backend directory not found!"
    echo "Please run this script from the project root directory"
    exit 1
fi

# Start backend in background with nohup
cd backend
echo "üìÇ Changed to backend directory: $(pwd)"
echo "üöÄ Starting backend server with nohup..."
nohup npm run dev > ../nohup_backend.out 2>&1 &
backend_pid=$!
echo "‚úÖ Backend started with nohup (PID: $backend_pid)"
echo "üìã Backend logs: nohup_backend.out"
cd ..

# Wait a moment for backend to start
echo "‚è≥ Waiting 3 seconds for backend to initialize..."
sleep 3

# Step 6: Start Frontend Service
echo ""
echo "üîÑ Step 6: Starting Frontend Service..."
echo "=============================================="
echo "Starting frontend on port 5173..."

# Check if we're in the right directory (should have package.json)
if [ ! -f "package.json" ]; then
    echo "‚ùå Error: package.json not found in current directory!"
    echo "Please run this script from the project root directory"
    exit 1
fi

echo "üìÇ Starting frontend from: $(pwd)"
echo "üöÄ Starting frontend server with nohup..."
nohup npm run dev > nohup_frontend.out 2>&1 &
frontend_pid=$!
echo "‚úÖ Frontend started with nohup (PID: $frontend_pid)"
echo "üìã Frontend logs: nohup_frontend.out"

# Step 7: Verification and Summary
echo ""
echo "üîç Step 7: Verification..."
echo "=============================================="
sleep 3

echo "Checking if services are running..."

# Check backend
if kill -0 $backend_pid 2>/dev/null; then
    echo "‚úÖ Backend is running (PID: $backend_pid)"
else
    echo "‚ùå Backend failed to start or crashed"
fi

# Check frontend
if kill -0 $frontend_pid 2>/dev/null; then
    echo "‚úÖ Frontend is running (PID: $frontend_pid)"
else
    echo "‚ùå Frontend failed to start or crashed"
fi

# Check ports
echo ""
echo "Port status:"
if lsof -ti:3001 >/dev/null 2>&1; then
    echo "‚úÖ Backend port 3001: ACTIVE"
else
    echo "‚ùå Backend port 3001: NOT ACTIVE"
fi

if lsof -ti:5173 >/dev/null 2>&1; then
    echo "‚úÖ Frontend port 5173: ACTIVE"
else
    echo "‚ùå Frontend port 5173: NOT ACTIVE"
fi

# Final Summary
echo ""
echo "üìä Summary:"
echo "=============================================="
echo "Backend PID: $backend_pid (nohup enabled)"
echo "Frontend PID: $frontend_pid (nohup enabled)"
echo ""
echo "Log files:"
echo "  Backend:  nohup_backend.out"
echo "  Frontend: nohup_frontend.out"
echo ""
echo "To stop services manually:"
echo "  Backend:  kill $backend_pid"
echo "  Frontend: kill $frontend_pid"
echo ""
echo "URLs:"
echo "  Local Frontend:   http://localhost:5173"
echo "  Local Backend:    http://localhost:3001"
if [ "$CURRENT_IP" != "localhost" ]; then
    echo "  Network Frontend: http://${CURRENT_IP}:5173"
    echo "  Network Backend:  http://${CURRENT_IP}:3001"
fi
echo ""
echo "‚úÖ Script completed successfully!"
echo "üåü Services are now running with nohup - they will persist after session ends!"
